@dataclass
class Trade:
    """ê±°ë˜ ê¸°ë¡"""
    symbol: str
    entry_date: datetime
    exit_date: Optional[datetime]
    entry_price: float
    exit_price: Optional[float]
    quantity: int
    trade_type: str  # BUY, SELL
    strategy: str
    pnl: Optional[float] = None
    pnl_pct: Optional[float] = None

