# ì¶œë ¥: NewsSentiment ì—´ê±°í˜•
class NewsSentiment(Enum):
    """ë‰´ìŠ¤ ê°ì„± ë¶„ë¥˜"""
    VERY_POSITIVE = auto()
    POSITIVE = auto()
    NEUTRAL = auto()
    NEGATIVE = auto()
