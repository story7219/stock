# 🚀 Ultra Stock Analysis System - 환경 변수 설정

# ===========================================
# Gemini AI API 설정 (필수)
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# 한국투자증권 API 설정 (선택사항)
# ===========================================
# 한국투자증권 앱 키 (KIS Developers에서 발급)
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here

# 계좌 정보
KIS_ACCOUNT_NUMBER=your_account_number_here
KIS_ACCOUNT_PRODUCT_CODE=01

# 모의투자 여부 (true: 모의투자, false: 실투자)
IS_MOCK=true

# ===========================================
# 데이터 수집 설정
# ===========================================
# Yahoo Finance 딜레이 (초)
YAHOO_DELAY=0.1

# 최대 재시도 횟수
MAX_RETRIES=3

# 요청 타임아웃 (초)
REQUEST_TIMEOUT=30

# ===========================================
# 인베스팅닷컴 뉴스 설정
# ===========================================
# 뉴스 수집 간격 (분)
NEWS_UPDATE_INTERVAL=5

# 수집할 뉴스 개수
NEWS_LIMIT=50

# Selenium 헤드리스 모드 (true/false)
SELENIUM_HEADLESS=true

# ===========================================
# 로깅 설정
# ===========================================
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 로그 파일 경로
LOG_FILE=logs/ultra_hts.log

# ===========================================
# 분석 설정
# ===========================================
# 분석할 종목 수 제한
ANALYSIS_LIMIT=200

# 기술적 분석 기간 (일)
TECHNICAL_ANALYSIS_DAYS=60

# ===========================================
# 보안 설정
# ===========================================
# API 요청 제한 (일일)
DAILY_API_LIMIT=1000

# 요청 간 딜레이 (초)
API_DELAY=0.1

# 데이터 수집 설정
MAX_STOCKS_PER_MARKET=200
DATA_CACHE_TIMEOUT=3600

# GUI 설정
WINDOW_WIDTH=1600
WINDOW_HEIGHT=1000 