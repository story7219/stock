# AI Trading System Environment Variables
# 복사하여 .env 파일로 저장하고 실제 값으로 수정하세요

# =============================================================================
# 기본 시스템 설정
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=AI Trading System
APP_VERSION=1.0.0

# =============================================================================
# 서버 설정
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
API_PREFIX=/api/v1

# =============================================================================
# 데이터베이스 설정
# =============================================================================
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://trading_user:your_password@localhost:5432/ai_trading
TIMESCALE_URL=postgresql://timeseries_user:your_password@localhost:5433/timeseries_data
MONGODB_URL=mongodb://localhost:27017/ai_trading

# PostgreSQL 설정
POSTGRES_PASSWORD=your_secure_password
TIMESCALE_PASSWORD=your_secure_password

# MongoDB 설정
MONGO_PASSWORD=your_secure_password

# =============================================================================
# Redis 설정
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# Kafka 설정
# =============================================================================
KAFKA_BROKERS=localhost:9092

# =============================================================================
# KIS API 설정 (한국투자증권)
# =============================================================================
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_REAL_APP_KEY=your_kis_real_app_key
KIS_REAL_APP_SECRET=your_kis_real_app_secret
KIS_ACCOUNT_CODE=your_account_code

# =============================================================================
# DART API 설정 (공시정보)
# =============================================================================
DART_API_KEY=your_dart_api_key

# =============================================================================
# 글로벌 API 설정
# =============================================================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FRED_API_KEY=your_fred_api_key
QUANDL_API_KEY=your_quandl_api_key

# =============================================================================
# 뉴스 및 소셜 API 설정
# =============================================================================
NEWS_API_KEY=your_news_api_key
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# =============================================================================
# 대체 데이터 API 설정
# =============================================================================
WEATHER_API_KEY=your_weather_api_key
SATELLITE_API_KEY=your_satellite_api_key
ESG_API_KEY=your_esg_api_key

# =============================================================================
# ML/DL 모델 설정
# =============================================================================
MODEL_TYPE=lstm
MODEL_DIR=./models
MODEL_VERSION=latest
SEQUENCE_LENGTH=60
BATCH_SIZE=32
EPOCHS=100
LEARNING_RATE=0.001
DROPOUT_RATE=0.2

# LSTM 설정
LSTM_UNITS=[128, 64, 32]
LSTM_LAYERS=3

# Transformer 설정
TRANSFORMER_HEADS=8
TRANSFORMER_LAYERS=6
TRANSFORMER_D_MODEL=512

# CNN 설정
CNN_FILTERS=[64, 128, 256]
CNN_KERNEL_SIZE=3

# GPU 설정
GPU_ENABLED=false
GPU_MEMORY_FRACTION=0.8

# =============================================================================
# 트레이딩 설정
# =============================================================================
TRADING_STRATEGY=day_trading
TRADING_SYMBOLS=["005930", "000660", "035420", "051910", "006400"]
TRADING_HOURS_MARKET_OPEN=09:00
TRADING_HOURS_MARKET_CLOSE=15:30
TRADING_HOURS_PRE_MARKET=08:30
TRADING_HOURS_POST_MARKET=16:00

# =============================================================================
# 리스크 관리 설정
# =============================================================================
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENT=0.02
TAKE_PROFIT_PERCENT=0.04
MAX_DRAWDOWN=0.15
POSITION_SIZING_METHOD=kelly
KELLY_FRACTION=0.25
FIXED_POSITION_SIZE=0.05

# =============================================================================
# 기술적 분석 설정
# =============================================================================
TECHNICAL_INDICATORS=["sma", "ema", "rsi", "macd", "bollinger_bands", "stochastic", "atr", "adx", "cci", "williams_r", "mfi", "obv"]

# 일목균형표 설정
ICHIMOKU_TENKAN_PERIOD=9
ICHIMOKU_KIJUN_PERIOD=26
ICHIMOKU_SENKOU_SPAN_B_PERIOD=52
ICHIMOKU_DISPLACEMENT=26

# 시간론 설정
TIME_ANALYSIS_FIBONACCI_LEVELS=[0.236, 0.382, 0.5, 0.618, 0.786]
TIME_ANALYSIS_TIME_CYCLES=[5, 8, 13, 21, 34, 55, 89]
TIME_ANALYSIS_SEASONAL_PATTERNS=true

# 대등수치 설정
EQUAL_NUMBERS_PRICE_LEVELS=[1000, 2000, 3000, 5000, 10000, 20000, 30000, 50000]
EQUAL_NUMBERS_VOLUME_LEVELS=[1000000, 5000000, 10000000, 50000000]
EQUAL_NUMBERS_SUPPORT_RESISTANCE=true

# =============================================================================
# 실시간 처리 설정
# =============================================================================
REALTIME_UPDATE_INTERVAL=1
BATCH_UPDATE_INTERVAL=60
MODEL_UPDATE_INTERVAL=3600
MAX_WORKERS=8
CHUNK_SIZE=1000
CACHE_TTL=300

# =============================================================================
# 모니터링 설정
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_URL=http://localhost:3000

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/trading.log
LOG_MAX_SIZE=100
LOG_BACKUP_COUNT=5

# =============================================================================
# 알림 설정
# =============================================================================
ALERT_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# =============================================================================
# 백테스팅 설정
# =============================================================================
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=100000000
BACKTEST_COMMISSION=0.00015

# =============================================================================
# 보안 설정
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS 설정
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# 파일 저장 설정
# =============================================================================
DATA_DIR=./data
BACKUP_DIR=./backups
LOG_DIR=./logs

# =============================================================================
# 백업 설정
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# 개발 환경 설정
# =============================================================================
# 개발 환경에서만 사용할 설정들
DEV_MODE=true
MOCK_TRADING=true
DEBUG_LEVEL=DEBUG

# =============================================================================
# 프로덕션 환경 설정
# =============================================================================
# 프로덕션 환경에서만 사용할 설정들
# PROD_MODE=true
# MOCK_TRADING=false
# DEBUG_LEVEL=WARNING 