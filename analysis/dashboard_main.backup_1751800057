```python
# ğŸš€ ì£¼ì‹ì„ ë¬¼ ìë™ë§¤ë§¤ ë´‡ ë©”ì¸ ì‹¤í–‰ íŒŒì¼
# - ì‹¤ì‹œê°„ ë°ì´í„°, ì „ëµ í†µí•©, í¬ì§€ì…˜/ë¦¬ìŠ¤í¬ ê´€ë¦¬, ëŒ€ì‹œë³´ë“œ, ë°±í…ŒìŠ¤íŠ¸ ë“± í¬í•¨
import os
import time
import json
import threading
import pandas as pd
import numpy as np
import yfinance as yf
import streamlit as st
from datetime import datetime, timedelta
from analysis.market_analyzer import MarketAnalyzer
from analysis.strategy_manager import StrategyManager
from analysis.strategies import TraditionalStrategy, MLStrategy

# ì„¤ì • ë¡œë“œ
CONFIG_PATH = os.path.join(os.path.dirname(__file__), '../configs/config.json')
try:
    with open(CONFIG_PATH, encoding='utf-8') as f:
        config = json.load(f)
except FileNotFoundError:
    st.error(f"ì„¤ì • íŒŒì¼ '{CONFIG_PATH}'ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.")
    exit()
except json.JSONDecodeError as e:
    st.error(f"ì„¤ì • íŒŒì¼ '{CONFIG_PATH}'ì˜ JSON í˜•ì‹ ì˜¤ë¥˜: {e}")
    exit()


SYMBOL = config['symbol']
CAPITAL = config['capital']
MAX_LOSS_PCT = config['max_loss_pct']
TAKE_PROFIT_PCT = config['take_profit_pct']
INTERVAL = config['interval']
DASHBOARD_PORT = config['dashboard_port']

# ë°±í…ŒìŠ¤íŠ¸ ê¸°ê°„: 2000-01-01 ~ ì˜¤ëŠ˜
BACKTEST_START = '2000-01-01'
BACKTEST_END = datetime.now().strftime('%Y-%m-%d')
COMMISSION = 0.0005  # 0.05%

# ì „ëµ/ë¶„ì„ ì¸ìŠ¤í„´ìŠ¤
market_analyzer = MarketAnalyzer()
strategy_manager = StrategyManager()
trad_strategy = TraditionalStrategy()
ml_strategy = MLStrategy()

# ê±°ë˜/í¬ì§€ì…˜ ê´€ë¦¬ ë³€ìˆ˜
position = None
trade_log = []
max_drawdown = 0

# yfinance ë°ì´í„° ìˆ˜ì§‘ (API ì‹¤íŒ¨ì‹œ ì¬ì‹œë„, ë°ì´í„° ì—†ì„ ë•Œ ì˜ˆì™¸ì²˜ë¦¬)
def fetch_realtime_data(symbol: str, start: str = BACKTEST_START, end: str = BACKTEST_END,
                        interval: str = INTERVAL, max_retry: int = 3) -> pd.DataFrame:
    for attempt in range(max_retry):
        try:
            df = yf.download(symbol, start=start, end=end,
                             interval=interval, progress=False)
            if df is None or df.empty:
                raise ValueError(f"ë°ì´í„° ì—†ìŒ: {symbol} {start}~{end}")
            df = df.rename(columns={c: c.lower() for c in df.columns})
            df = df.reset_index()
            return df
        except Exception as e:
            if attempt < max_retry - 1:
                time.sleep(2)
                continue
            else:
                st.error(f"[APIì˜¤ë¥˜] ë°ì´í„° ìˆ˜ì§‘ ì‹¤íŒ¨: {e}")
                return pd.DataFrame()


