# ğŸ’— ë¡œê¹… ì„¤ì • (INFO ë ˆë²¨, ì‹œê°„ í¬í•¨ í¬ë§·)
logging.basicConfig(level=logging.INFO,
                    format='%(asctime)s - %(levelname)s - %(message)s')
logger = logging.getLogger(__name__)

class AutoRefactor:
    """ğŸ’— ìë™ ë¦¬íŒ©í† ë§ ë©”ì¸ ì—”ì§„ í´ë˜ìŠ¤"""
    
    def __init__(self, project_root: str = ".", dry_run: bool = True):
        """ğŸ’— ë¦¬íŒ©í† ë§ ë„êµ¬ ì´ˆê¸°í™”"""
        self.project_root = Path(project_root)
        self.dry_run = dry_run
        self.changes_made: List[Dict[str, Any]] = []
        self.refactor_stats = {
            'files_processed': 0,
            'changes_applied': 0,
            'errors': 0,
            'improvements': []
        }
        logger.info(f"ğŸ”„ ìë™ ë¦¬íŒ©í† ë§ ë„êµ¬ ì´ˆê¸°í™” "
                    f"(DryRun: {dry_run})")

    def format_code_with_black(self) -> bool:
        """ğŸ’— Blackìœ¼ë¡œ ì½”ë“œ í¬ë§·íŒ… (PEP8 ì¤€ìˆ˜)"""
        logger.info("ğŸ¨ Blackìœ¼ë¡œ ì½”ë“œ í¬ë§·íŒ… ì¤‘...")
        try:
            cmd = ['black', '--check', '--diff',
                   str(self.project_root)]
            if not self.dry_run:
                cmd = ['black', str(self.project_root)]
            result = subprocess.run(cmd,
                                    capture_output=True,
                                    text=True,
                                    timeout=300)
